---
import type { Tool } from '../data/tools';
import type { Lang } from '../i18n/translations';
import { categoryIcons } from '../data/tools';

interface Props {
  tool: Tool;
  lang: Lang;
  index: number;
}

const { tool, lang, index } = Astro.props;

const platformLabels: Record<string, { icon: string; label: string }> = {
  linux: { icon: 'üêß', label: 'Linux' },
  windows: { icon: 'ü™ü', label: 'Windows' },
  macos: { icon: 'üçé', label: 'macOS' },
};

const detailUrl = lang === 'en' ? `/tools/${tool.id}` : `/${lang}/tools/${tool.id}`;
---

<a href={detailUrl} class="tool-card" style={`--delay: ${index * 0.1}s`}>
  <div class="card-glow"></div>
  
  <div class="card-header">
    <span class="category-icon">{categoryIcons[tool.category]}</span>
    <div class="platforms">
      {tool.platforms.map((p) => (
        <span class="platform-badge" title={platformLabels[p].label}>
          {platformLabels[p].icon}
        </span>
      ))}
    </div>
  </div>

  <div class="card-body">
    <h3>{tool.name[lang]}</h3>
    <p>{tool.description[lang]}</p>
  </div>

  <div class="card-footer">
    <code class="preview-cmd">{tool.usage.linux?.split(' ')[0] || tool.usage.windows?.split(' ')[0]}</code>
    <span class="view-more">
      Lihat detail
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </span>
  </div>
</a>

<style>
  .tool-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: linear-gradient(145deg, #1e1e2e 0%, #181825 100%);
    border: 1px solid #313244;
    border-radius: 16px;
    padding: 1.5rem;
    text-decoration: none;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: cardFadeIn 0.6s ease-out backwards;
    animation-delay: var(--delay);
  }

  @keyframes cardFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
      rgba(137, 180, 250, 0.06),
      transparent 40%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .tool-card:hover {
    border-color: #89b4fa;
    transform: translateY(-4px);
    box-shadow: 
      0 10px 40px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(137, 180, 250, 0.1);
  }

  .tool-card:hover .card-glow {
    opacity: 1;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .category-icon {
    font-size: 2rem;
    filter: grayscale(0.2);
    transition: all 0.3s ease;
  }

  .tool-card:hover .category-icon {
    filter: grayscale(0);
    transform: scale(1.1);
  }

  .platforms {
    display: flex;
    gap: 0.375rem;
  }

  .platform-badge {
    font-size: 1rem;
    padding: 0.25rem 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .tool-card:hover .platform-badge {
    background: rgba(137, 180, 250, 0.1);
  }

  .card-body {
    flex: 1;
    margin-bottom: 1rem;
  }

  h3 {
    margin: 0 0 0.5rem 0;
    color: #cdd6f4;
    font-size: 1.25rem;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .tool-card:hover h3 {
    color: #89b4fa;
  }

  p {
    margin: 0;
    color: #a6adc8;
    font-size: 0.875rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid #313244;
  }

  .preview-cmd {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 0.75rem;
    color: #a6e3a1;
    background: rgba(166, 227, 161, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .view-more {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: #6c7086;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .view-more svg {
    transition: transform 0.3s ease;
  }

  .tool-card:hover .view-more {
    color: #89b4fa;
  }

  .tool-card:hover .view-more svg {
    transform: translateX(4px);
  }
</style>

<script>
  document.querySelectorAll('.tool-card').forEach((card) => {
    card.addEventListener('mousemove', (e) => {
      const rect = (card as HTMLElement).getBoundingClientRect();
      const x = ((e as MouseEvent).clientX - rect.left) / rect.width * 100;
      const y = ((e as MouseEvent).clientY - rect.top) / rect.height * 100;
      (card as HTMLElement).style.setProperty('--mouse-x', `${x}%`);
      (card as HTMLElement).style.setProperty('--mouse-y', `${y}%`);
    });
  });
</script>
