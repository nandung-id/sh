---
import Layout from '../layouts/Layout.astro';
import ToolCard from '../components/ToolCard.astro';
import LanguageSwitcher from '../components/LanguageSwitcher';
import QuickStart from '../components/QuickStart';
import { tools, categoryIcons } from '../data/tools';
import { t, type Lang } from '../i18n/translations';

const lang: Lang = 'en';

const groupedTools = tools.reduce((acc, tool) => {
  if (!acc[tool.category]) acc[tool.category] = [];
  acc[tool.category].push(tool);
  return acc;
}, {} as Record<string, typeof tools>);
---

<Layout lang={lang}>
  <div class="page-wrapper">
    <div class="bg-gradient"></div>
    <div class="bg-grid"></div>
    
    <div class="container">
      <header>
        <div class="header-top">
          <LanguageSwitcher client:load currentLang={lang} />
        </div>
        
        <div class="hero">
          <div class="hero-badge">
            <span class="pulse"></span>
            {tools.length} {t(lang, 'site.toolsAvailable')}
          </div>
          <h1>
            <span class="emoji">üõ†Ô∏è</span>
            <span class="title-text">{t(lang, 'site.title')}</span>
          </h1>
          <p class="tagline">{t(lang, 'site.tagline')}</p>
          
          <QuickStart 
            client:load 
            title={t(lang, 'quickStart.title')}
            description={t(lang, 'quickStart.description')}
            showAllLabel={t(lang, 'quickStart.showAll')}
          />
        </div>
      </header>

      {Object.entries(groupedTools).map(([category, categoryTools]) => (
        <section class="category">
          <div class="category-header">
            <div class="category-title">
              <span class="icon">{categoryIcons[category as keyof typeof categoryIcons]}</span>
              <h2>{t(lang, `categories.${category}.name`)}</h2>
            </div>
            <p class="category-desc">{t(lang, `categories.${category}.description`)}</p>
          </div>
          
          <div class="tools-grid">
            {categoryTools.map((tool, index) => (
              <ToolCard tool={tool} lang={lang} index={index} />
            ))}
          </div>
        </section>
      ))}

      <footer>
        <div class="footer-content">
          <p>{t(lang, 'footer.hostedOn')}</p>
          <div class="footer-links">
            <a href="/contribute">{t(lang, 'footer.contribute')}</a>
            <a href="https://github.com" target="_blank" rel="noopener">GitHub</a>
          </div>
        </div>
      </footer>
    </div>
  </div>
</Layout>

<style>
  .page-wrapper {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
  }

  .bg-gradient {
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: 
      radial-gradient(ellipse at 20% 20%, rgba(137, 180, 250, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 80%, rgba(180, 190, 254, 0.06) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 50%, rgba(166, 227, 161, 0.04) 0%, transparent 60%);
    animation: gradientMove 20s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes gradientMove {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    25% { transform: translate(2%, 2%) rotate(1deg); }
    50% { transform: translate(-1%, 3%) rotate(-1deg); }
    75% { transform: translate(1%, -2%) rotate(0.5deg); }
  }

  .bg-grid {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(205, 214, 244, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(205, 214, 244, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    pointer-events: none;
  }

  .container {
    position: relative;
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem;
    z-index: 1;
  }

  header {
    margin-bottom: 4rem;
  }

  .header-top {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 3rem;
    animation: fadeInDown 0.6s ease-out;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .header-top :global(.lang-switcher) {
    display: flex;
    gap: 0.5rem;
  }

  .header-top :global(.lang-btn) {
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    color: #a6adc8;
    background: rgba(30, 30, 46, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid #313244;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .header-top :global(.lang-btn:hover) {
    border-color: #89b4fa;
    color: #cdd6f4;
    transform: translateY(-2px);
  }

  .header-top :global(.lang-btn.active) {
    background: linear-gradient(135deg, #89b4fa 0%, #b4befe 100%);
    color: #11111b;
    border-color: transparent;
  }

  .hero {
    text-align: center;
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(166, 227, 161, 0.1);
    border: 1px solid rgba(166, 227, 161, 0.2);
    border-radius: 100px;
    color: #a6e3a1;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .pulse {
    width: 8px;
    height: 8px;
    background: #a6e3a1;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  h1 {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    color: #cdd6f4;
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
  }

  .emoji {
    font-size: 3rem;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .title-text {
    background: linear-gradient(135deg, #cdd6f4 0%, #89b4fa 50%, #b4befe 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tagline {
    color: #a6adc8;
    font-size: 1.25rem;
    margin: 0 0 2rem 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .category {
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease-out backwards;
  }

  .category:nth-child(2) { animation-delay: 0.2s; }
  .category:nth-child(3) { animation-delay: 0.3s; }
  .category:nth-child(4) { animation-delay: 0.4s; }
  .category:nth-child(5) { animation-delay: 0.5s; }

  .category-header {
    margin-bottom: 1.5rem;
  }

  .category-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .category-title .icon {
    font-size: 1.5rem;
  }

  .category-title h2 {
    color: #cdd6f4;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  .category-desc {
    color: #6c7086;
    margin: 0;
    font-size: 0.9375rem;
    padding-left: 2.25rem;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #313244;
    animation: fadeInUp 0.8s ease-out 0.6s backwards;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #6c7086;
    font-size: 0.875rem;
  }

  .footer-content p {
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: #6c7086;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: #89b4fa;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1.5rem;
    }

    h1 {
      font-size: 2.5rem;
    }

    .emoji {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1rem;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }

    .footer-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
